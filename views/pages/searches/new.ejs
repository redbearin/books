<!-- API-linked search form -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet"  href="./styles/reset.css">
  <link rel="stylesheet"  href="./styles/base.css">
  <link rel="stylesheet"  href="./styles/layout.css">
  <link rel="stylesheet"  href="./styles/modules.css">
  <title>Book List</title>
</head>
<body>
  <main>
    <h4>Search by Title or Author</h4>
    <form action="/searches/show" method="post">
      <input type="text" name="search" placeholder="Enter a title or author" required>
      <fieldset>
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required>
        </label>
      </fieldset>
      <fieldset>
        <label for="author" class="select-book-button">
          <span>Author</span>
          <input type="radio" name="search" value="author" required>
        </label>
      </fieldset>
      <button type="submit">Search the Google Books API</button>
    </form>
  </main>
</body>
</html>